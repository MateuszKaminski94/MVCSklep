@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <header>
        <div id="nav">
            <div id="header">
                <div id="show">
                    <img src="@Url.Content("~/Content/Images/kategorie.png")"/>
                </div>

                <a href="@Url.Content("~/")">
                    <div id="logo">
                        <img src="@Url.Content("~/Content/Images/logo.png")" />
                    </div>
                </a>

                <div id="search">
                    <div id="searchbutton">
                        <img src="@Url.Content("~/Content/Images/wyszukiwarka.png")"/>
                    </div>

                    <form id="searchform">
                        <input id="searchfilter" type="search" name="searchQuery" data-autocomplete-source="@Url.Action("GamesSuggestions", "Home")" placeholder="Wprowadź tytuł gry..." />
                    </form>

                </div>

                <a href="@Url.Action("Index", "Cart")">
                    <div id="cart">

                        <img src="@Url.Content("~/Content/Images/koszyk.png")" />
                        <div id="cartcount">
                            @Html.Action("GetCartItemsCount", "Cart")
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                </a>

                <div id="user">
                    <img src="@Url.Content("~/Content/Images/logowanie.png")" />

                    <div id="userbox">
                        @Html.Partial("_LoginPartial")
                    </div>

                </div>

                <div style="clear: both;"></div>
            </div>
        </div>
    </header>

    @Html.Action("GenresMenu", "Home")

    <div>

        @RenderBody()

    </div>

    <footer>
        <nav id="footer">
            <ul>
                <li><a href="@Url.Action("StaticContent","Home", new { viewname = "onas"})">O nas</a></li>
                <li><a href="@Url.Action("StaticContent","Home", new { viewname = "kontakt"})">Kontakt</a></li>
                <li><a href="@Url.Action("StaticContent","Home", new { viewname = "wysylka"})">Wysyłka</a></li>
                <li><a href="@Url.Action("StaticContent","Home", new { viewname = "regulamin"})">Regulamin</a></li>
                <li>
                    <div id="last-foot">
                        MateuszowSKY &copy; 2016
                    </div>
                </li>
                <div style="clear: both;"></div>
            </ul>
        </nav>
    </footer>


    @Scripts.Render("~/Bundles/jquery")

</body>
</html>
