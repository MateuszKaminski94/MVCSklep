@using MateuszowSKYSklep.Models
@using MateuszowSKYSklep.Infrastructure
@model MateuszowSKYSklep.ViewModels.HomeViewModel


@{
    ViewBag.Title = "Strona glowna MateuszowSKY";
}


<nav id="genre">
    <ul>
        @foreach (var genre in Model.Genres)
            {
            <li>
                <a href="@Url.Action("List", "Store", new {genrename = genre.Name.ToLower()})">
                    <div class="genres-img">
                        <img src="@Url.GenreIconPath(genre.IconFilename)" />
                    </div>
                    <div class="genres-text">
                        @genre.Name
                    </div>
                </a>

            </li>
        }

        <div style="clear: both;"></div>
    </ul>

</nav>

<div id="slidertitle">
    Preordery
</div>

<div id="slider">

    <div id="slider-content">
        <div id="slider-left">
            <img src="@Url.Content("~/Content/Images/przycisklewo.png")"/>
        </div>

        <ul id="preordercontainer">
            @foreach (var game in Model.PreOrders)
            {
                <li class="preorderimage">
                    <a href="@Url.Action("Details", "Store", new {id = game.GameId})">
                        <img src="@Url.GameScreenPath(game.GameId, "ss1.jpg")" style="float: left;"/>
                    </a>
                </li>
            }
        </ul>
        <div style="clear: both;"></div>

        <div id="slider-right">
            <img src="@Url.Content("~/Content/Images/przyciskprawo.png")"/>
        </div>
    </div>
</div>

<div id="randomtitle">
    Wybrane dla Ciebie
</div>

<div id="random">
    <ul>
        @foreach (var game in Model.Randoms)
        {
        <li>
            <a href="@Url.Action("Details","Store", new {id = game.GameId} )">
                <img src="@Url.GameScreenPath(game.GameId, game.MainImageFilename)" />
                <div class="randomsmalltitle">
                    @game.GameTitle
                </div>
            </a>
        </li>
        }
        <div style="clear: both;"></div>
    </ul>
</div>

