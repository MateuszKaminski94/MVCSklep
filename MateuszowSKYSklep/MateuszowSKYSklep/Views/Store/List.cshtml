@using MateuszowSKYSklep.Infrastructure
@model IEnumerable<MateuszowSKYSklep.Models.Game>

@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div id="randomtitle">
    @ViewBag.Title
</div>

<div id="random">
    <ul>
        @foreach (var game in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Store", new {id = game.GameId})">
                    <img src="@Url.GameScreenPath(game.GameId, game.ImageFilename1)" />
                    <div class="randomsmalltitle">
                        @game.GameTitle
                    </div>
                </a>
            </li>
        }
        <div style="clear: both;"></div>
    </ul>
</div>