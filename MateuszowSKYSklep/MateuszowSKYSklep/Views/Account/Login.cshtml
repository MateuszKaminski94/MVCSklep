@model MateuszowSKYSklep.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Logowanie w sklepie MateuszowSKY";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="sectiontitle">
    Logowanie
</div>
<div class="basebody">
    @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div id="loginerror">
            @Html.ValidationMessage("loginerror", "")
        </div>

        <table class="userdatatable">
            <tr>
                <td class="firstcolumn">@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>@Html.TextBoxFor(o => o.Email)</td>
                <td>
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td class="firstcolumn">@Html.LabelFor(o => o.Password, "Hasło:")</td>
                <td>@Html.PasswordFor(o => o.Password)</td>
                <td>
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(m => m.RememberMe, new {@checked = "checked"}) @Html.LabelFor(m => m.RememberMe)</td>
            </tr>
        </table>

        <input type="submit" value="Zaloguj" class="submitLink" />
        <a href="@Url.Action("Register")">
            <div id="noaccountbutton">Nie mam jeszcze konta</div>
        </a>
    }
</div>
