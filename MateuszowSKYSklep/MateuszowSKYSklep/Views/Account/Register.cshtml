@model MateuszowSKYSklep.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Rejestracja w sklepie MateuszowSKY";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="sectiontitle">
    Rejestracja
</div>
<div class="basebody">
    @using (@Html.BeginForm("Register", "Account"))
    {
        @Html.AntiForgeryToken()

        <div id="loginerror">
            @Html.ValidationMessage("loginerror", "")
            @Html.ValidationSummary()
        </div>

        <table class="userdatatable">

            <tr>
                <td class="firstcolumn">@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>@Html.TextBoxFor(o => o.Email)</td>
                <td>
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>

            <tr>
                <td class="firstcolumn">@Html.LabelFor(o => o.Password, "Hasło:")</td>
                <td>@Html.PasswordFor(o => o.Password)</td>
                <td>
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
            </tr>

            <tr>
                <td class="firstcolumn">@Html.LabelFor(o => o.ConfirmPassword, "Potwierdź hasło:")</td>

                <td>@Html.PasswordFor(o => o.ConfirmPassword)</td>
                <td>
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.ConfirmPassword)
                    </div>
                </td>
            </tr>
        </table>

        <div id="registerbutton">
            <input type="submit" value="Zarejestruj" class="submitLink" />
        </div>
    }
</div>
